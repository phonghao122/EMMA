    <div style="margin-top:180px" class="col-md-10">
        <form method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card">
                <div class="card-heard" style="background-color:aqua">
                    <h2 style="margin-top: 30px" class="card-title mb-2 text-center">Thêm Mới Nhân Viên</h2>
                </div>
                <div class="card-body">
                    <label class="manv mt-1"> <h4>Mã Nhân Viên:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                    </div>
                    <label class="manv mt-1"> <h4>Họ Tên Nhân Viên:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.HoTenNV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTenNV, "", new { @class = "text-danger" })
                    </div>
                    <label class="gt mt-1"> <h4>Giới Tính:</h4> </label>
                    <div class="col-md-12">
                        <select name="GioiTinh" class="form-control">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                    </div>
                    <label class="username mt-1"> <h4>Username:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <label class="mk mt-1"> <h4>Password:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <label class="ns mt-1"> <h4>Ngày Sinh:</h4> </label>
                    <div class="col-md-12">
                        <input class="form-control" name="NgaySinh" type="date" />
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>
                    <label class="dc mt-1"> <h4>Địa Chỉ:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                    <label class="sdt mt-1"> <h4>Số Điện Thoại:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                    <label class="email mt-1"> <h4>Email:</h4> </label>
                    <div class="col-md-12">
                        <input name="Email" type="email" class="form-control" />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <label class="qq mt-1"> <h4>Quê Quán:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.QueQuan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QueQuan, "", new { @class = "text-danger" })
                    </div>
                    <label class="CCCD mt-1"> <h4>Căng Cước Công Dân:</h4> </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })
                    </div>
                    <label class="tdhv mt-1"> <h4>Trình Độ Học Vấn:</h4> </label>
                    <div class="col-md-12">
                        <select name="TrinhDoHocVan" class="form-control">
                            <option value="Tiểu Học">Tiểu Học</option>
                            <option value="Trung Học Cơ Sở">Trung Học Cơ Sở</option>
                            <option value="Trung Học Phổ Thông">Trung Học Phổ Thông</option>
                            <option value="Cao Đẳng">Cao Đẳng</option>
                            <option value="Đại Học">Đại Học</option>
                            <option value="Cao Học">Cao Học</option>
                            <option value="Thạc Sĩ">Thạc Sĩ</option>
                            <option value="Tiến Sĩ">Tiến Sĩ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.TrinhDoHocVan, "", new { @class = "text-danger" })
                    </div>
                    <label class="mapb mt-1"> <h4> Phòng Ban:</h4> </label>
                    <div class="col-md-12">
                        <select class="form-control" name="MaPB">
                            @foreach (var item in db.PHONGBAN)
                            {
                                <option value="@item.MaPB">@item.TenPB</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.MaPB, "", new { @class = "text-danger" })
                    </div>
                    <label class="macv mt-1"> <h4>Chức Vụ:</h4> </label>
                    <div class="col-md-12">
                        <select class="form-control" name="MaCV">
                            @foreach (var item in db.CHUCVU)
                            {
                                <option value="@item.MaCV">@item.TenCV</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.MaCV, "", new { @class = "text-danger" })
                    </div>
                    <label class="bl mt-1"> <h4>Lương Cơ Bản:</h4> </label>
                    <div class="col-md-12">
                        <select class="form-control" name="BacLuong">
                            @foreach (var item in db.LUONG)
                            {
                                <option value="@item.BacLuong">@item.LuongCoBan</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.BacLuong, "", new { @class = "text-danger" })
                    </div>
                    <label class="avt mt-1"> <h4>Avata:</h4> </label>
                    <div class="col-md-12">
                        <input type="file" class="form-control" name="fileAnh" />
                        @Html.ValidationMessageFor(model => model.Avt, "", new { @class = "text-danger" })
                    </div>


                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <div class="text-end">
                            <button class="btn btn-warning"> @Html.ActionLink("Back to List", "Index")</button>
                            <input type="submit" value="ThemMoi" class="btn btn-info">
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </form>
