<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        @using (Html.BeginForm("DsLuong", "HomeManager"))
        {
            @Html.AntiForgeryToken()
            <div style="margin-top:160px" class="card">
                <div class="card-heard" style="background-color: darkblue">
                    <h3 style="margin-top: 20px; color: aliceblue " class="card-title mb-1 text-center">Danh Sách Lương</h3>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <label>Tháng</label>
                            <select class="form-control">
                                <option value="0"></option>
                                @for (int i = 1; i < 13; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label>Năm</label>
                            <select class="form-control">
                                <option value="0"> </option>
                                @for (int i = 1992; i < DateTime.Now.Year + 1; i++)
                                {
                                    <option value="@i"> @i </option>
                                }
                            </select>
                        </div>
                        <div style="margin-top:10px" class="text-center">
                            <button style="width:200px" type="submit" class="btn btn-primary">Tiếp Tục</button>
                        </div>
                        <div style="margin-top:20px">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center"> Họ Tên Nhân Viên</th>
                                        <th class="text-center"> Lương Cơ Bản</th>
                                        <th class="text-center"> Hệ Số Lương</th>
                                        <th class="text-center"> Thực Lĩnh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NHANVIEN.HoTenNV)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LUONG.LuongCoBan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LUONG.HSLuong)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThucLinh)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div style="margin-top:10px">
                                <div class="chinhsua">
                                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                                </div>
                                <div>
                                    <button style="height:36px; width:60px" class="btn btn-info">
                                        @Html.PagedListPager(Model, page => Url.Action("DsLuong", new { page, currentThang = ViewBag.currentThang, currentNam = ViewBag.currentNam }))
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


