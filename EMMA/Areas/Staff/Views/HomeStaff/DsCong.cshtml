    <div class="row">
        <div class="col-md-1">
        </div>
        <div style="margin-top:150px" class="col-md-10">
            <div class="card">
                <div class="card-heard" style="background-color:aqua">
                    <h3 style="margin-top:20px " class="card-title mb-1 text-center">Danh Sách Chấm Công</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center"> Họ Tên Nhân Viên</th>
                                <th class="text-center"> Ngày</th>
                                <th class="text-center"> Tháng</th>
                                <th class="text-center"> Năm</th>
                                <th class="text-center"> Vào</th>
                                <th class="text-center"> Ra</th>
                                <th class="text-center"> Acction </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                string id = Session["id"].ToString();
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.NHANVIEN.HoTenNV)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Ngay)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Thang)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Nam)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Vao)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Ra)
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center" href="/Staff/HomeStaff/ChamCongRa/@id">
                                                <img src="~/public/app-assets/images/ico/face_id.jpg" height="30" width="30" />
                                            </a>
                                        </td>

                                    </tr>


                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div style="margin-left:20px">
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("DsCong", new { page, currentThang = ViewBag.currentThang, currentNam = ViewBag.currentNam }))
                </div>
            </div>
        </div>
    </div>

