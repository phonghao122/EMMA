@model IEnumerable<EMMA.Models.ChamCong>

@{
    ViewBag.Title = "DsCong";
    Layout = "~/Views/Shared/_Layout.cshtml";
    EMMA.Models.EMMAEntities db = new EMMA.Models.EMMAEntities();
}

@Html.ActionLink("Create New", "ChamCong")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NHANVIEN.HoTenNV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ra)
        </th>

        <th></th>
    </tr>
    @{
        string id = Session["id"].ToString();
        foreach (var item in db.ChamCong.ToList())
        {
            if (item.MaNV == id)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NHANVIEN.HoTenNV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Thang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ra)
                    </td>
                    <td>
                        @Html.ActionLink("Cham Cong Ra", "ChamCongRa", new { id = item.MaNV})
                    </td>

                </tr>
            }
        }
    }

</table>
