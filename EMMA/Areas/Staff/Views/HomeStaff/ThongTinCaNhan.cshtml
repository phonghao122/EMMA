<div class="row">
    <div class="col-md-1"></div>
    <div style="margin-top:160px" class="col-md-10">
        <div class="card">
            <div class="card-heard" style="background-color:aquamarine">
                <h3 style="margin-top:25px " class="text-center">Thông Tin Cá Nhân Của Bạn</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th> Avata</th>
                            <th class=" text-center"> <img src="@Model.Avt" style="width:100px;height:100px" />
</tr>
                        <tr>
                            <th> Họ Và Tên</th>
                            <th>   @Html.DisplayFor(model => model.HoTenNV)</th>
                        </tr>
                        <tr>
                            <th> Giới Tính</th>
                            <th> @Html.DisplayFor(model => model.GioiTinh)</th>
                        </tr>
                        <tr>
                            <th> Username</th>
                            <th>  @Html.DisplayFor(model => model.Username)</th>
                        </tr>
                        <tr>
                            <th> Ngày Sinh</th>
                            <th> @Html.DisplayFor(model => model.NgaySinh)</th>
                        </tr>
                        <tr>
                            <th> Địa Chỉ</th>
                            <th>  @Html.DisplayFor(model => model.DiaChi)</th>
                        </tr>
                        <tr>
                            <th> Số Điện Thoại</th>
                            <th> @Html.DisplayFor(model => model.SDT)</th>
                        </tr>
                        <tr>
                            <th> Email </th>
                            <th> @Html.DisplayFor(model => model.Email)</th>
                        </tr>
                        <tr>
                            <th> Quê Quán </th>
                            <th>  @Html.DisplayFor(model => model.QueQuan)</th>
                        </tr>
                        <tr>
                            <th>Căng Cước Công Dân </th>
                            <th> @Html.DisplayFor(model => model.CCCD)</th>
                        </tr>
                        <tr>
                            <th> Trình Độ Học Vấn </th>
                            <th> @Html.DisplayFor(model => model.TrinhDoHocVan)</th>
                        </tr>
                        <tr>
                            <th> Tên Công Việc </th>
                            <th> @Html.DisplayFor(model => model.CHUCVU.TenCV)</th>
                        </tr>
                        <tr>
                            <th> Bậc Lương </th>
                            <th> @Html.DisplayFor(model => model.LUONG.BacLuong)</th>
                        </tr>
                        <tr>
                            <th> Tên Phòng Ban </th>
                            <th> @Html.DisplayFor(model => model.PHONGBAN.TenPB)</th>
                        </tr>

                    </tbody>
                </table>
                <div class="card-footer">
                    <div class="text-end">
                        <button class="btn btn-warning">  @Html.ActionLink("Back to Home", "Index") </button>
                        <button class="btn btn-info "> @Html.ActionLink("Edit", "CapNhatTTCN", new { id = Model.MaNV })  </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

